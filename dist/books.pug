html
  head
    title Book Library
  body
    h1 Book Library
    ul
      each book in books
        li
          a(href=`/books/${book.id}`) #{book.name}
    h2 Add a Book
    form(action="/books" method="post")
      label(for="id") ID:
      input(type="number" name="id" required)
      label(for="name") Name:
      input(type="text" name="name" required)
      button(type="submit") Add Book
